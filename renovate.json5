{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    labels: [
        'renovate',
    ],
    dependencyDashboardLabels: [
        'renovate',
    ],
    dependencyDashboard: true,
    enabledManagers: [
        'custom.regex',
    ],
    customManagers: [
        {
            customType: 'regex',
            datasourceTemplate: 'docker',
            description: 'Custom Manager for OCI images',
            fileMatch: [
                'build.gradle.kts'
            ],
            matchStringsStrategy: 'combination',
            matchStrings: [
                'runtime\\("library:(?<packageName>.+):(?<currentDigest>.+)"\\)',
            ],
            currentValueTemplate: "{{{replace 'sha256!' '' currentDigest}}}",
            autoReplaceStringTemplate: "runtime(library:{{{packageName}}}:sha256!{{{newValue}}})",
            versioningTemplate: 'docker'
        },
    ],
    pinDigests: true,
}
