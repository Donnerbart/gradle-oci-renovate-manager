{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    enabledManagers: [
        'custom.regex',
    ],
    customManagers: [
        {
            customType: 'regex',
            datasourceTemplate: 'docker',
            description: 'Custom Manager for OCI images',
            fileMatch: [
                'build.gradle.kts',
            ],
            matchStringsStrategy: 'combination',
            matchStrings: [
                'runtime\\("(?:library[:/])?(?<packageName>.+):sha256!(?<currentDigest>[a-fA-F0-9]{64})"\\)',
            ],
            currentValueTemplate: "{{{replace ':' '!' currentDigest}}}",
            versioningTemplate: 'docker',
        },
    ],
    pinDigests: true,
    labels: [
        'renovate',
    ],
    dependencyDashboardLabels: [
        'renovate',
    ],
    dependencyDashboard: true,
}
